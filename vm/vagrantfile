Vagrant.configure("2") do |config|
  # Box utilitzat
  config.vm.box = "debian/bookworm64"

  # Nom de la màquina dins VirtualBox
  config.vm.provider "virtualbox" do |vb|
    vb.name = "pj9f4a7.1_jagahi"
    vb.cpus = 2
    vb.memory = 2048
  end

  # Nom de sistema (hostname) dins la màquina virtual
  config.vm.hostname = "pj9f4a7.1-jagahi.fjeclot.net"

  # Carpeta compartida:
  # - Carpeta física (amfitrió): ../codis   (una carpeta per sobre del Vagrantfile)
  # - Carpeta dins la màquina virtual: /home/vagrant/codis
  config.vm.synced_folder "../codis", "/home/vagrant/codis"

  # Redirecció de ports
  config.vm.network "forwarded_port", guest: 80, host: 8000
  config.vm.network "forwarded_port", guest: 443, host: 8443

  # Provisionament
  config.vm.provision "shell", inline: <<-SHELL
    # Actualitzar la llista de paquets
    apt-get update -y

    # Instal·lar programari general
    apt-get install -y aptitude net-tools whois

    # Instal·lar Docker
    apt-get install -y ca-certificates curl gnupg lsb-release
    install -m 0755 -d /etc/apt/keyrings
    curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg
    chmod a+r /etc/apt/keyrings/docker.gpg

    echo \
      "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian \
      $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

    apt-get update -y
    apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

    # Afegir usuari vagrant al grup docker
    usermod -aG docker vagrant
  SHELL
end
